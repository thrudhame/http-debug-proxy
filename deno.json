{
  "license": "AGPL-3.0",
  "version": "0.1.0",
  "name": "http-debug-proxy",
  "description": "MITM-style proxy to debug HTTP based services",
  "publish": {
    "exclude": [
      ".devcontainer",
      ".github",
      ".vscode",
      ".env"
    ]
  },
  "exports": {
    ".": "./main.ts"
  },
  "tasks": {
    "dev": "deno run --env --allow-env --allow-net --allow-write --watch main.ts",
    "start": "deno run --env --allow-env --allow-net --allow-write main.ts",
    "test": "PROXY_PORT=7000 deno run --allow-env --allow-net --allow-write main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/io": "jsr:@std/io@^0.225.2",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "fmt": {
    "options": {
      "singleQuote": true
    }
  }
}
